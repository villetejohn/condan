  head
    title= title
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block styles
    block scripts

  body
    block nav
      if user
        nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
          a.navbar-brand.col-sm-3.col-md-2.mr-0(href='#') Hi, #{user.name}
          input#incidents-table-filter.form-control.form-control-dark.w-100(type='text', placeholder='Search', aria-label='Search')
          ul.navbar-nav.px-3
            li.nav-item.text-nowrap
              a.nav-link(href='/user/logout') Sign out

    block sideNav
      if user
        nav.col-md-2.d-none.d-md-block.bg-light.sidebar
          .sidebar-sticky
            ul.nav.flex-column.sidebar-nav
              li.nav-item
                a.nav-link.active(href='/dashboard/home')
                  span
                  if user.is_admin
                    | Home 
                  else
                    | Announcements

              if user.is_admin
                li.nav-item
                  a.nav-link(href='/dashboard/announcement')
                    span
                    | Announcement 
              li.nav-item
                a.nav-link(href='/dashboard/incident-report')
                  span
                  | Send Incident Report
              li.nav-item
                a.nav-link(href='/dashboard/booked-amenities')
                  span
                  | Book Amenity
              if user.is_admin
                li.nav-item
                  a.nav-link(href='/dashboard/accounts')
                    span
                    | Accounts
                li.nav-item
                  a.nav-link(href='view-reports')
                    span
                    | Reports
            if user.is_admin       
              h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
                span Generate reports
                a.d-flex.align-items-center.text-muted(href='#')
                  span
              ul.nav.flex-column.mb-2
                li.nav-item
                  a.nav-link(href='/dashboard/generate-report')
                    span
                    | Incident Report
