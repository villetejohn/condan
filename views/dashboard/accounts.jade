    .row
      main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role='main')
        table.incident-reports-table.table.table-hover
            thead
                tr
                  th Name
                  th Email
                  th Username
                  th Validated
                  th
            tbody#users-table-body
                each user, i in users
                  tr
                    td #{user.name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.is_validated}
                    td 
                      button.btn.btn-primary.btn-sm(type='button', data-toggle='modal', data-target='#modal-#{i}')
                        | Edit
                      if !(user.is_validated)
                        a.btn.btn-outline-primary.btn-sm(href='/dashboard/accounts/activate/#{user._id}')
                          | Activate

